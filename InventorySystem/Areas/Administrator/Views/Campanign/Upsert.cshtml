@model DataTransferObjets.Dto.Out.CampanignResponse
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Create Campaign";
}

<form method="post">

    <div style="padding-left:15%; padding-right:15%; padding-bottom:inherit.4rem;">
        <div class="row border-0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>

        @if (Model.Id != 0)
        {
            titulo = "Update Campaign";
            <input type="hidden" asp-for="Id" id="id" />
        }
        <div class="col-12 border-bottom p-0">
            <h2 class="text-primary">@titulo</h2>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Name</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Name of the campaign" id="name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Descripcion</label>
                <input type="text" asp-for="Description" class="form-control" placeholder="Description of the campaign" id="description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Country</label>
                <input type="text" asp-for="Country" class="form-control" placeholder="Country of the campaign" id="country" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>City</label>
                <input type="text" asp-for="City" class="form-control" placeholder="City of the campaign" id="city" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Address</label>
                <input type="text" asp-for="Address" class="form-control" placeholder="Address of the campaign" id="address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Phone</label>
                <input type="text" asp-for="Phone" class="form-control" placeholder="Phone of the campaign" id="phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div>
            @if (Model.Id != 0)
            {
                <partial name="_UpdateAndReturnButton" model="Model.Id" />
            }
            else
            {
                <partial name="_CreateAndReturnButton" />
            }
        </div>
    </div>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

